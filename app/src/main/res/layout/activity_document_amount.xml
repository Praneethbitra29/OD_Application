<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentAmountActivity"
    android:orientation="vertical"
    android:paddingTop="40sp"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background">

    <Button
        android:id="@+id/odPreconvaction"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/myowngradiant"
        android:text="PRE"
        android:textSize="13sp" />

    <Button
        android:id="@+id/odinconvaction"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/odPreconvaction"
        android:layout_centerHorizontal="true"
        android:background="@drawable/myowngradiant"
        android:text="IN"
        android:textSize="13sp" />

    <Button
        android:id="@+id/odpostconvaction"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/odPreconvaction"
        android:background="@drawable/myowngradiant"
        android:text="POST"
        android:textSize="13sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/odPreconvaction">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp">

            <TableRow
                android:paddingTop="40sp"
                >


            </TableRow>

            <TableRow android:paddingTop="100dp">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="60dp"
                    android:text="Amount"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />


                <TextView
                    android:id="@+id/viewamount"
                    android:layout_width="186dp"
                    android:layout_height="40dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow android:paddingTop="30sp">


                <TextView
                    android:id="@+id/due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/viewdue"
                    android:layout_width="186dp"
                    android:layout_height="40dp"
                    android:textSize="30dp" />

            </TableRow>

            <TableRow android:paddingTop="30sp">

                <TextView
                    android:id="@+id/totalamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/viewtotalamount"
                    android:layout_width="186dp"
                    android:layout_height="40dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow android:paddingTop="30sp">

                <TextView
                    android:id="@+id/amounterror"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:paddingLeft="90dp"
                android:paddingTop="30sp">


                <Button
                    android:id="@+id/odpay"
                    android:layout_width="170sp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/myowngradiant"
                    android:text="Pay"
                    android:textSize="20dp" />
            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>