<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
android:orientation="vertical"
tools:context=".PaymentActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_marginTop="90dp"
        android:id="@+id/contactus_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/contactus_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number\n\n"
        android:textColor="#4786be"
        android:textSize="20sp" />

    <EditText
        android:maxLength="10"
        android:layout_below="@+id/contactus_phonenumber"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_editphonenumber"
        android:inputType="number"/>

    <Button
        android:id="@+id/contactus_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:background="@drawable/myowngradiant"
        android:textSize="20sp" />

</LinearLayout>

</ScrollView>
